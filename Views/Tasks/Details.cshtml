@model TaskReminder.Models.Tasks

@{
    ViewData["Title"] = "Details";
}

<h2 class="pt-4">Details</h2>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @{
                string title = Model.Title == null ? "(No title)" : Model.Title;
            }
            @Html.DisplayTextFor(model => title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @{
                string description = Model.Description == null ? "(No description)" : Model.Description;
            }
            @Html.DisplayTextFor(model => description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateCreated)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateCreated)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TaskDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TaskDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NotificationBeforeTask)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NotificationBeforeTask) minutes before
        </dd>
    </dl>
</div>

<div class="mt-2">
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary ml-5">Back to List</a>
</div>
